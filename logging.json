{
    "version": 1,
    "disable_existing_loggers": false,
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "formatter": "standard",
            "level": "DEBUG"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "standard",
            "level": "DEBUG",
            "encoding": "utf8",
            "maxBytes": 1048576,
            "filename": "logs/stickersbot.log",
            "backupCount": 20
        },
        "file_conversation": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "conversation_status",
            "level": "DEBUG",
            "encoding": "utf8",
            "maxBytes": 1048576,
            "filename": "logs/stickersbot_conversations.log",
            "backupCount": 20
        }
    },
    "loggers": {
        "conversation": {
            "handlers": ["console", "file_conversation"],
            "propagate": false,
            "level": "DEBUG"
        },
        "": {
            "handlers": [
                "console",
                "file"
            ],
            "propagate": false,
            "level": "DEBUG"
        },
        "telegram": {
            "level": "WARNING"
        },
        "JobQueue": {
            "level": "WARNING"
        },
        "peewee": {
            "level": "WARNING"
        },
        "PIL": {
            "level": "WARNING"
        },
        "bot.bot": {
            "level": "INFO"
        },
        "StickerFile": {
            "level": "DEBUG"
        },
        "pyrogram": {
            "level": "WARNING"
        }
    },
    "formatters": {
        "short": {
            "format": "[%(name)s][%(levelname)s] >>> %(message)s"
        },
        "standard": {
            "format": "[%(asctime)s][%(name)s][%(module)s:%(funcName)s:%(lineno)d][%(levelname)s] >>> %(message)s"
        },
        "conversation_status": {
            "format": "[%(asctime)s][%(levelname)s] >>> %(message)s"
        }
    }
}
